{%- include 'style-section' -%}
<div class="banner-2-col customstyle{{ section.id }}" data-aos={{section.settings.animation}}  >
   
    <div class="{{ section.settings.setwidth }}">
        
        {%- render 'section-heading' -%}

        <div class="row">
            <div class="col-12 banner-2-col-left">
                <div class="row">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                        {%- when 'bannerleft' -%}
                            <div class="w-100 item-block banner-2-col-item {% if section.settings.effect_image %}effect-image{% endif %} " data-aos={{section.settings.animation}}  {{ block.shopify_attributes }}>
                                <div class="banner-2-col-image-box">
                                    {% if block.settings.image != blank %}
                                        <img src="{{ block.settings.image | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
                                    {%- else -%}
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    {% endif %}
                                    <div class="banner-content-position d-flex align-items-{{ block.settings.box_col }} justify-content-{{ block.settings.box_row }}">
                                        <div class="banner-2-col-content text-{{ block.settings.text_align }}">
                                            {% if block.settings.subtop != blank %}
                                                <div class="subtop mb-1" style="color:{{ block.settings.color_subtop }}">
                                                    {{ block.settings.subtop }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.title != blank %}
                                                <div class="title-banner-22-col font-family-1" style="color:{{ block.settings.color_title }}">
                                                    {{ block.settings.title }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.des != blank %}
                                                <div class="des-banner-22-col" style="color:{{ block.settings.color_des }}">
                                                    {{ block.settings.des }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.text_button != blank %}
                                                <div class="button-banner-22-col">
                                                    <a href="{{ block.settings.link_button }}"  style="color:{{ block.settings.color_button }}" class="link-base">{{block.settings.text_button}}</a>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {%- endcase -%}
                {%- endfor -%}
                </div>
            </div>
            <div class="col-12 banner-2-col-right">
                <div class="row">
                    {%- for block in section.blocks -%}
                    {%- case block.settings.width -%}
                    {%- when '25%' -%}
                    {%- assign block_width = 'col-lg-3 col-md-3' -%}
                    {%- when '33%' -%}
                    {%- assign block_width = 'col-xl-4 col-lg-5 col-md-5' -%}
                    {%- when '41%' -%}
                    {%- assign block_width = 'col-md-5' -%}
                    {%- when '50%' -%}
                    {%- assign block_width = 'col-sm-6' -%}
                    {%- when '59%' -%}
                    {%- assign block_width = 'col-md-7' -%}
                    {%- when '66%' -%}
                    {%- assign block_width = 'col-xl-8 col-lg-7 col-md-7' -%}
                    {%- when '75%' -%}
                    {%- assign block_width = 'col-lg-9 col-md-9' -%}
                    {%- when '100%' -%}
                    {%- assign block_width = 'col-12' -%}
                    {%- endcase -%}
                   
                        {%- case block.type -%}
                        {%- when 'bannerright' -%}
                        
                            <div class="{{block_width}} item-block banner-2-col-item {% if section.settings.effect_image %}effect-image{% endif %}" {{ block.shopify_attributes }}>
                                <div class="banner-2-col-image-box">
                                    {% if block.settings.image != blank %}
                                        <img src="{{ block.settings.image | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
                                    {%- else -%}
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    {% endif %}
                                    <div class="banner-content-position d-flex align-items-{{ block.settings.box_col }} justify-content-{{ block.settings.box_row }}">
                                        <div class="banner-2-col-content text-{{ block.settings.text_align }}">
                                            {% if block.settings.image_sub != blank %}
                                                <div class="image-sub">
                                                    <img src="{{ block.settings.image_sub | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
                                                </div>
                                            {% endif %}
                                            {% if block.settings.subtop != blank %}
                                                <div class="subtop mb-1" style="color:{{ block.settings.color_subtop }}">
                                                    {{ block.settings.subtop }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.title != blank %}
                                                <div class="title-banner-22-col font-family-1" style="color:{{ block.settings.color_title }}">
                                                    {{ block.settings.title }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.des != blank %}
                                                <div class="des-banner-22-col" style="color:{{ block.settings.color_des }}">
                                                    {{ block.settings.des }}
                                                </div>
                                            {% endif %}
                                            {% if block.settings.text_button != blank %}
                                                <div class="button-banner-22-col">
                                                    <a href="{{ block.settings.link_button }}"  style="color:{{ block.settings.color_button }}" class="link-base">{{block.settings.text_button}}</a>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                        {%- endcase -%}
                   
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>
