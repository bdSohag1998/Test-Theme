.smember--style1 .smember-name,
.smember--style3 .smember-name{
  font-size:18px;margin:0
}
.smember--style2 span.smember-role,
.smember--style3 span.smember-role{
  color:#999;
  font-size:12px;
  display:block
}
.smember-photo{
  text-align:center
}
.smember-icon svg{
  height:15px;
  vertical-align:middle;
  margin:0 6px;
}
.smember--style1{
  overflow:hidden
}
.smember--style1 .smember-photo{
  overflow:hidden;
  position:relative
}
.smember--style1 .smember-photo img {
  transition: 0.3s cubic-bezier(0, 0, 0, 0.1);
  -webkit-transform: scale(1);
  transform: scale(1);
}
.smember--style1 .smember-icons {
  margin-top: 10px;
  transition: opacity .3s ease;
}
.smember--style1 .smember-icons > *:not(:last-child){
  margin-right:20px;
}
.smember--style1 .smember-icons > *{
  opacity:0.5;
  transition:all .3s ease;
}

.smember-wr{
  padding:0px 15px;
}
.smember--style1 span.smember-role {
  display: block;
}
.smember--style1 .smember-info{
  background:#fff;
  transition: transform .3s ease;
}
.smember--style1:hover .smember-info{
  transform:translateY(-20%);
}
.smember--style1:hover .smember-icons{
  opacity:1;
}
.smember--style1:hover .smember-photo img {
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}
@media (min-width:768px){
  .smember--style1 .smember-icons{
    opacity:0;
  }
  .smember--style1 .smember-icons > *:hover{
    opacity:1;
  }
}
.smember--style2 {
  -webkit-transform: translateY(0);
  transform: translateY(0);
  -webkit-transition: 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  transition: 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
}
.smember--style2 .smember-photo {
  position: relative;
}
.smember--style2 .smember-icons {
  position: absolute;
  top: 0;
  text-align: center;
  width: 40px;
  padding: 10px 0;
  left: -7px;
}
.smember--style2 .smember-icons:before {
  content: "";
  position: absolute;
  left: -7px;
  bottom: -7px;
  border: 7px solid transparent;
}
.smember--style2 .smember-name {
  font-size: 18px;
  margin: 0;
  position: relative;
  padding-bottom: 3px;
}
.smember--style2 .smember-name:before {
  content: "";
  position: absolute;
  right: 0;
  height: 1px;
  width: 30px;
  background: #000;
  bottom: 0;
}
.smember--style4 .smember-icon {
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.smember--style3 {
  -webkit-transform: translateY(0);
  transform: translateY(0);
  -webkit-transition: 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
  transition: 0.25s cubic-bezier(0.43, 0.44, 0.63, 0.61);
}
.smember--style3 .smember-photo {
  position: relative;
}
.smember--style3 .smember-icons {
  position: absolute;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  width: 100%;
  padding: 7px 10px;
  left: 0;
}
.smember--style3:hover {
  -webkit-transform: translateY(-10px);
  transform: translateY(-10px);
}
.smember--style3 .smember-icon i:hover {
  background: #fff;
  color: #444;
}
.smember--style4 {
  position: relative;
  border: 1px solid var(--g-input-border);
  background: var(--color-body);
  padding: 16px;
}
.smember--style4 .smember-photo {
  overflow: hidden;
  position: relative;
}
.smember--style4 .smember-photo img {
  -transition: all 0.3s cubic-bezier(0, 0, 0, 0.1);
  transition: 0.3s cubic-bezier(0, 0, 0, 0.1);
  -webkit-transform: scale(1);
  transform: scale(1);
}
.smember--style4 .smember-icons {
  position: absolute;
  top: -1px;
  right: 0;
  width: 30px;
}
.smember--style4 .smember-icons a:first-child {
  -webkit-transition-delay: 0.1s;
  transition-delay: 0.1s;
}
.smember--style4 .smember-icons a:nth-child(2) {
  -webkit-transition-delay: 0.15s;
  transition-delay: 0.15s;
}
.smember--style4 .smember-icons a:nth-child(3) {
  -webkit-transition-delay: 0.2s;
  transition-delay: 0.2s;
}
.smember--style4 .smember-icons a:nth-child(4) {
  -webkit-transition-delay: 0.25s;
  transition-delay: 0.25s;
}
.smember--style4 .smember-info {
  background: var(--color-body);
  padding-bottom: 0 !important;
}
.smember--style4 .smember-name {
  font-size: 20px;
  margin: 0;
  line-height: normal;
}
.smember--style4 span.smember-role {
  font-size: 12px;
  display: block;
}
.smember--style4:hover .smember-photo img {
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}
.smember--style4 .smember-icon {
  -webkit-transform: translateX(50px);
  transform: translateX(50px);
  -webkit-transition: -webkit-transform 0.3s cubic-bezier(0, 0, 0, 0.2),
    transform 0.3s cubic-bezier(0, 0, 0, 0.2);
  transition: -webkit-transform 0.3s cubic-bezier(0, 0, 0, 0.2),
    transform 0.3s cubic-bezier(0, 0, 0, 0.2);
  width: 30px;
  margin-bottom: 2px;
  display: inline-block;
}
.smember--style4:hover .smember-icon {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

{% endstyle %}

