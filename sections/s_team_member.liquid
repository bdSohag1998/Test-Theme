<!-- s_team_member.liquid -->
 <div class="customstyle{{ section.id }}">
   {%- render 'style-section' -%}
<div class="steam-member__wrap {{ section.settings.setwidth }}">
  <div class="steam-member__content">
   {%- render 'section-heading' -%}
    <div class="smembers row"
    data-rows="{{ section.settings.rows }}"
    data-slidesToShow="{{ section.settings.show }}"
    data-arrows="{{ section.settings.arrows }}"
    data-dots="{{ section.settings.dots }}" 
    data-draggable="{{ section.settings.draggable }}" 
    data-infinite="{{ section.settings.infinite }}" 
    data-section-id="{{ section.id }}" 
    data-section-type="slickCarousels"
    >
      {% for block in section.blocks %}
      <div class="smember-wr " data-aos="{{ section.settings.animation }}">
        <div class="smember--style{{ section.settings.layout }}">
          <div class="smember-photo ">
            {% if block.settings.image != blank %}
              <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                <img src="{{ block.settings.image | image_url: width: 1, height: 1 }}" alt="{{ block.settings.name | handle }}" 
                  class="lazyload" 
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"/>
              </div>
            {% else %}
            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
            {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
           
          </div>
          {% if block.settings.name != blank %}
          <div class="smember-info py-4">
            <h3 class="h4 mb-1">{{ block.settings.name }}</h3>
            <span class="smember-role txt-body-60 small">{{ block.settings.position }}</span>
            <!--  -->
            <div class="smember-icons pt-3">
              {% if block.settings.facebook != blank %}
              <a target="_blank" href="{{ block.settings.facebook }}" title="{{ block.settings.name }} in facebook" class="smember-icon">
                {%- render 'icon-facebook' -%}
              </a>
              {% endif %}
              {% if block.settings.twitter != blank %}
              <a target="_blank" href="{{ block.settings.twitter }}" title="{{ block.settings.name }} in twitter plus" class="smember-icon">
                {%- render 'icon-twitter' -%}
              </a>
              {% endif %}
              {% if block.settings.instagram != blank %}
              <a target="_blank" href="{{ block.settings.instagram }}" title="{{ block.settings.name }} in instagram" class="smember-icon">
                {%- render 'icon-instagram' -%}
              </a>
              {% endif %}
              {% if block.settings.pinterest != blank %}
              <a target="_blank" href="{{ block.settings.pinterest }}" title="{{ block.settings.name }} in pinterest" class="smember-icon">
                {%- render 'icon-pinterest' -%}
              </a>
              {% endif %}
            </div>
            <!--  -->
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
</div>

