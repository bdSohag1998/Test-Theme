<style>
    {%- if section.settings.enable_box -%}
    @media (min-width: 992px){
        .collectionlist-wrapper-{{ section.id }}{
            padding:calc(var(--g-gutter) + 10px);
            background:{{section.settings.bg_box}};
        }
    }
    {%- endif -%}
    .collection-2-col{
        padding: 60px 0px 40px 0px;
        background-repeat: round;
    }
    .collection-2-col .top{
        position: absolute;
        bottom: 0px;
        left: 0;
        right: 0;
        z-index: 2;
    }
    .collection-2-col .hv-image img{
        width: 100%;
        max-width: 100%;
        height: auto;
        transition: all .3s ease;
    }
    .collection-2-col .name-collection{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10%;
    }
    .collection-2-col .name-collection .collection-info > a{
        transition: all .3s ease;
        color: {{ section.settings.color_name_collection }};
    }
    .collection-2-col .btn-theme{
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: none;
        padding: 0;
        background-color: {{ section.settings.bg_button }};
    }
    .collection-2-col .btn-theme .icon{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }
    .collection-2-col .btn-theme:hover{
        border: none;
        background: {{ section.settings.bg_button_hover }};
    }
    .collection-2-col .btn-theme::before{
        display: none;
    }
    .collection-2-col .btn-theme svg{
        fill: currentColor;
    }
    .collection-2-col .btn-theme:hover svg{
        color: {{ section.settings.color_button_hover }};
    }
    .collection-2-col .view-more{
        margin-top: 30px;
    }
    .collection-2-col .view-more h3{
        font-style: normal;
        font-weight: 400;
        font-size: 28px;
        line-height: 36px;
        font-family: var(--g-font-2);
    }
    .collection-2-col .view-more >a{
        font-style: normal;
        font-weight: 700;
        font-size: 12px;
        line-height: 15px;
    }
    .collection-2-col .view-more h3,.collection-2-col .view-more >a,.collection-2-col .btn-theme svg{
        color: {{ section.settings.color_text_collection }};
    }
    .collection-2-col .view-more >a:hover{
        color: var(--header-menuhover);
    }
    .collection-2-col .view-more >a svg{
        width: 12px;
        height: auto;
        margin-left: 10px;
    }

    .item-block:empty{
        display: none;
    }
    .item-block{
        margin-bottom: 30px;
    }
    .collection-info p{
        color: {{ section.settings.color_count }};
    }
   
    .collectionlist-item:hover .name-collection{
        background-color: #fff;
    }
    .collectionlist-item:hover .collection-info > a{
        color: var(--g-main);
        border-bottom: 1px solid var(--g-main);
    }
    @media (min-width:1200px) {
        .collection-2-col .name-collection{
            padding:6px 30px 31px 59px;
        }
        .collection-2-col .name-collection .collection-info > a{
            transform: translateY(23px);
            max-width: max-content;
            margin-bottom: 33px;
            display: inline-block;
        }
        .collection-info p{
            transform: translateY(23px);
            opacity: 0;
            visibility: hidden;
            transition: all .3s ease;
        }
        .collectionlist-item:hover .collection-info p{
            transform: translateY(-5px);
            opacity: 1;
            visibility: visible;
        }
    }
    @media (min-width:1500px) {
        .collection-2-col .view-more{
            max-width: 50%;
            margin: auto;
        }  
        .collection-2-col .collection-2-col-heading{
            max-width: 50%;
            text-align: center;
            margin: auto;
        }
        .collection-2-col .view-more{
            padding-top: 110px;
        }
    }
    @media (max-width:768px) {
        .collection-2-col .view-more h3{
            font-size: 16px;
            line-height: 1.2;
        }
    }
    /* image hover */
    .collection-card__image{
        border-radius: 5px;
        overflow: hidden;
    }
    .effect-image:hover img{
        transform: scale(1.03);
    }
    @media (min-width:768px) {
        .collection-left{
            max-width: 46.3%;
        }
        .collection-right{
            max-width: 53.7%;
        }
    }
</style>
{%- include 'style-section' -%}
<div class="collection-2-col customstyle{{ section.id }}" data-aos={{section.settings.animation}}  >
   
    <div class="{{ section.settings.setwidth }}">
        <div class="collection-2-col-heading">
            {% if  section.settings.sub_title != blank %}
            <h4>{{ section.settings.sub_title }}</h4>
            {% endif %}
            {% if  section.settings.title != blank %}
            <h2 >{{ section.settings.title }}</h2>
            {% endif %}
            <p >{{ section.settings.decoration }}</p>
        </div>
        <div class="row">
            <div class="col-12 collection-left">
                <div class="row">
                {%- for block in section.blocks -%}
                {%- case block.settings.width -%}
                    {%- when '25%' -%}
                    {%- assign block_width = 'col-lg-3 col-md-3' -%}
                    {%- when '33%' -%}
                    {%- assign block_width = 'col-xl-4 col-lg-5 col-md-5' -%}
                    {%- when '50%' -%}
                    {%- assign block_width = 'col-sm-6' -%}
                    {%- when '66%' -%}
                    {%- assign block_width = 'col-xl-8 col-lg-7 col-md-7' -%}
                    {%- when '75%' -%}
                    {%- assign block_width = 'col-lg-9 col-md-9' -%}
                    {%- when '100%' -%}
                    {%- assign block_width = 'col-12' -%}
                    {%- endcase -%}
             
                        {%- case block.type -%}
                        {%- when 'collectionleft' -%}
                            <div class="{{block_width}} item-block collectionlist-item {% if section.settings.effect_image %}effect-image{% endif %} " data-aos={{section.settings.animation}}  {{ block.shopify_attributes }}>
                                {%- assign featured_collection = collections[block.settings.collection] -%}
                                {%- assign featured_image = block.settings.image -%}
                                {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
                                {%- assign collectionTitle = featured_collection.title | default: 'Collection title' -%}
                                <div class="collection-card-4" {{ block.shopify_attributes }}>
                                    <div class="collection-card__image position-relative ">
                                    <a class="hv-image" href="{{featured_collection.url | default :'#'}}">
                                        {%- if featured_image != blank -%}
                                        <img width="auto" height="auto" class="lazyload transition {% if section.settings.rounded %} rounded-circle {% endif %}" data-srcset="{{ featured_image | img_url: '600x'}}">
                                        {%- elsif featured_collection.image != blank -%}
                                        <img width="auto" height="auto" class="lazyload transition {% if section.settings.rounded %} rounded-circle {% endif %}" data-srcset="{{ featured_collection.image | img_url: '600x'}}">
                                        {%- else -%}
                                        {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                        {%- endif -%}
                                    </a>
                                    <div class="name-collection {{ section.settings.setname }} text-center m-0 ">
                                        <div class="collection-info text-left">
                                            <a class=" font-family-1 h4" href="{{featured_collection.url | default :'#'}}">
                                                {{ collectionTitle }}
                                            </a>
                                            {%- if section.settings.enable_items -%}
                                            <p>{{ featured_collection.products_count | default: 0 }} {{ featured_collection.products_count | pluralize: 'product', 'products' }}</p> 
                                            {%- endif -%} 
                                        </div>
                                    </div>
                                    </div>
                                    
                                </div>
                            </div>
                        {%- endcase -%}
           
                {%- endfor -%}
                </div>
                {%- if section.settings.text_view_more != blank -%}
                <div class="view-more">
                    <h3>{{ section.settings.text_view_more }}</h3>
                    <a href="{{ section.settings.link_view_more }}">{{ section.settings.text_button }} {% include 'icon-button' %}</a>
                </div>
                {%- endif -%}
            </div>
            <div class="col-12 collection-right">
                <div class="row">
                    {%- for block in section.blocks -%}
                    {%- case block.settings.width -%}
                    {%- when '25%' -%}
                    {%- assign block_width = 'col-lg-3 col-md-3' -%}
                    {%- when '33%' -%}
                    {%- assign block_width = 'col-xl-4 col-lg-5 col-md-5' -%}
                    {%- when '50%' -%}
                    {%- assign block_width = 'col-sm-6' -%}
                    {%- when '66%' -%}
                    {%- assign block_width = 'col-xl-8 col-lg-7 col-md-7' -%}
                    {%- when '75%' -%}
                    {%- assign block_width = 'col-lg-9 col-md-9' -%}
                    {%- when '100%' -%}
                    {%- assign block_width = 'col-12' -%}
                    {%- endcase -%}
                   
                        {%- case block.type -%}
                        {%- when 'collectionright' -%}
                        <div class="{{block_width}} item-block">
                        <div class=" collectionlist-item {% if section.settings.effect_image %}effect-image{% endif %}" {{ block.shopify_attributes }}>
                            {%- assign featured_collection2 = collections[block.settings.collection2] -%}
                            {%- assign featured_image2 = block.settings.image2 -%}
                            {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
                            {%- assign collectionTitle = featured_collection2.title | default: 'Collection title' -%}
                            <div class="collection-card-4" {{ block.shopify_attributes }}>
                                <div class="collection-card__image position-relative ">
                                <a class="hv-image" href="{{featured_collection2.url | default :'#'}}">
                                    {%- if featured_image2 != blank -%}
                                    <img width="auto" height="auto" class="lazyload transition {% if section.settings.rounded %} rounded-circle {% endif %}" data-srcset="{{ featured_image2 | img_url: '600x'}}">
                                    {%- elsif featured_collection2.image != blank -%}
                                    <img width="auto" height="auto" class="lazyload transition {% if section.settings.rounded %} rounded-circle {% endif %}" data-srcset="{{ featured_collection2.image | img_url: '600x'}}">
                                    {%- else -%}
                                    {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                    {%- endif -%}
                                </a>
                                <div class="name-collection {{ section.settings.setname }} text-center m-0 ">
                                    <div class="collection-info text-left">
                                        <a class=" font-family-1 h4" href="{{featured_collection2.url | default :'#'}}">
                                            {{ collectionTitle }}
                                        </a>
                                        {%- if section.settings.enable_items -%}
                                        <p>{{ featured_collection2.products_count | default: 0 }} {{ featured_collection2.products_count | pluralize: 'product', 'products' }}</p> 
                                        {%- endif -%}
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>
                        </div>
                        {%- endcase -%}
                   
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>
